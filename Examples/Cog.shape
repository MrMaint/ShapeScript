// ShapeScript document

define cog {
    option teeth 6
    path {
        define step 1 / teeth
        for i in 1 to teeth {
            point -0.02 0.8
            point 0.05 1
            rotate step
            point -0.05 1
            point 0.02 0.8
            rotate step
        }
        point -0.02 0.8
    }
}

difference {
    extrude {
        size 1 1 0.5
        cog { teeth 8 }
    }
    rotate 0 0 0.5
    cylinder
}
